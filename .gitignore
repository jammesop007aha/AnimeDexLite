// a.js - This file contains the JavaScript code for the 'a' feature.

// Set the initial values for variables 'x' and 'y'
let x = 0;
let y = 0;

// Function to increment the value of 'x'
function incrementX() {
  x++;
}

// Function to increment the value of 'y'
function incrementY() {
  y++;
}

// Function to perform some action with incremented values
function doSomethingWithIncrementedValues() {
  incrementX();
  incrementY();
  console.log(`x: ${x}, y: ${y}`);
}

// Export the incrementX, incrementY and doSomethingWithIncrementedValues functions
// to be used in other modules
module.exports = {
  incrementX,
  incrementY,
  doSomethingWithIncrementedValues,
};


<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Feature A</title>
    <!-- Include the JavaScript file for the 'a' feature -->
    <script src="../js/a.js" defer></script>
  </head>
  <body>
    <!-- Content for the 'a' feature goes here -->
    <button onclick="incrementX(); doSomethingWithIncrementedValues();">
      Click me
    </button>
  </body>
</html>
